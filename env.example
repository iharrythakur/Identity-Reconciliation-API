# Database Configuration - PostgreSQL Required
DATABASE_URL=postgresql://username:password@localhost:5432/bitespeed

# PostgreSQL Credentials
POSTGRES_DB=bitespeed
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO

# Security (optional - for future enhancements)
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Example configurations for different environments:

# Development (PostgreSQL)
# DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/bitespeed_dev
# DEBUG=True

# Production (PostgreSQL)
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/bitespeed_prod
# DEBUG=False
# LOG_LEVEL=WARNING 